<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgramInfo">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program Name"
        android:textSize="24dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ProgramInfo_TextView_Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:textSize="20dp"
        android:paddingHorizontal="10dp"
        android:text="Selection Mode"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ProgramInfo_TextView_Mode"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_TextView_Title"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:textSize="18dp"
        android:text="About"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ProgramInfo_TextView_About"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_TextView_Mode"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ProgramInfo_LinearLayout_AdmissionProcedure"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="18dp"
        android:cli="true"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_TextView_About"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admission Procedure "
            android:minWidth="150dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1565C0"
            android:id="@+id/ProgramInfo_TextView_AdmissionProcedure"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:id="@+id/ProgramInfo_LinearLayout_Institutes"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_LinearLayout_AdmissionProcedure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicable Institute "
            android:minWidth="150dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProgramInfo_TextView_Institutes"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ProgramInfo_LinearLayout_Cost"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_LinearLayout_Institutes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application Cost "
            android:minWidth="150dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProgramInfo_TextView_Cost"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ProgramInfo_TextView_Eligibility"
        android:layout_marginHorizontal="20dp"
        android:background="@color/teal_200"
        android:drawableEnd="@drawable/ic_baseline_add_24"
        android:text="Elegibility"
        android:paddingHorizontal="5dp"
        android:layout_marginVertical="15dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_LinearLayout_Cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ProgramInfo_TextView_Shortlisting"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:background="@color/teal_200"
        android:drawableEnd="@drawable/ic_baseline_add_24"
        android:text="Shortlisting / Selection Process"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_TextView_Eligibility_Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ProgramInfo_TextView_Eligibility_Info"
        android:paddingHorizontal="18dp"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_TextView_Eligibility"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_TextView_Shortlisting_Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:id="@+id/ProgramInfo_TextView_Confirm"
        android:text="I have read all info regarding admission procedure, courses offered, eligible institute and eligibility criteria."
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp"
        android:id="@+id/ProgramInfo_TextView_Shortlisting_Info"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_TextView_Shortlisting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/ProgramInfo_Button_Proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Proceed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ProgramInfo_TextView_Confirm" />
</androidx.constraintlayout.widget.ConstraintLayout></ScrollView>